<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaFirstApp.Views.ModalWindows.ExceptionHandlingWindow"
        Title="Ошибка.." Width="400" Height="200">
	<DockPanel>
		<UniformGrid DockPanel.Dock="Bottom" HorizontalAlignment="Right">
			<Button x:Name="CancelBtn" Content="Закрыть программу" IsCancel="True"/>
		</UniformGrid>
		<StackPanel>
			<TextBox x:Name="errMsgBox" BorderBrush="Red" BorderThickness="2"
					 HorizontalContentAlignment="Center" VerticalAlignment="Center"
					 IsReadOnly="True"/>
			<TextBox x:Name="stakTraseBox" BorderBrush="LightGray" BorderThickness="2"
					 HorizontalContentAlignment="Center" VerticalAlignment="Center"
					 IsReadOnly="True"/>
		</StackPanel>
	</DockPanel>
</Window>
